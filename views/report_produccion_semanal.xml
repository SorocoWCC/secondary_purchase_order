                                    <t t-esc="'{0:,.2f}'.format(int(inversion_bolsa_plastica))" />
                                </td>
                            </tr>
                        </t>
                        <t t-if="cantidad_papel_periodico &gt; 0 ">
                            <tr>
                                <td style="text-align: center;border: 2px solid black">Papel Periodico</td>
